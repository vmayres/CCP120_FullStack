<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Blog</title>
    <link rel="stylesheet" href="/css/blog.css">
</head>
<body>

    <main class="centralizado" id="blog-box">
        <h1>Blog</h1>

        <!-- Botão para criar novo post -->
        <button onclick="document.getElementById('form-post').style.display = 'block'">
            Criar novo post
        </button>

        <!-- Formulário de novo post -->
        <div id="form-post" style="display: none; margin-top: 20px;">
            <form action="/cadastrar_post" method="GET">
                <input type="text" name="titulo" placeholder="Título" required><br><br>
                <input type="text" name="resumo" placeholder="Resumo" required><br><br>
                <textarea name="conteudo" placeholder="Conteúdo" rows="5" required></textarea><br><br>
                <button type="submit">Enviar Post</button>
            </form>
        </div>

        <!-- Bloco onde os posts cadastrados serão exibidos -->
        <section id="posts">
            <% posts.forEach(function(post) { %>
                <div class="post">
                    <h2><%= post.db_titulo %></h2>
                    <h4><%= post.db_resumo %></h4>
                    <p><%= post.db_conteudo %></p>
                </div>
            <% }); %>
        </section>
    </main>

</body>
</html>
